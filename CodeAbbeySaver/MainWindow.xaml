<Window x:Class="CodeAbbeySaver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeAbbeySaver"
        mc:Ignorable="d"
        Title="Code Savior" Height="136.2" Width="298.2" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="label" Content="Login:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Login_textBox" HorizontalAlignment="Left" Height="23" Margin="80,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="195"/>
        <Label x:Name="label_Copy" Content="Password:" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="Passowrd_passwordBox" HorizontalAlignment="Left" Margin="80,41,0,0" VerticalAlignment="Top" Width="195"/>
        <Button x:Name="Save_button" Content="Save sources" HorizontalAlignment="Left" Margin="10,67,0,0" VerticalAlignment="Top" Width="265" Click="Save_button_Click"/>

    </Grid>
</Window>
